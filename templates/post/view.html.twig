{% extends 'cleanblog.html.twig' %}

{% block title %}
	{{ post.title }}
{% endblock %}

{% block titleheader %}
	{{ post.title }}
{% endblock %}

{% block subtitleheader %}{% endblock %}
{% block imageh %}
	<header class="masthead" style="background-image: url('{{ post.image }}')">
	{% endblock %}

	{% block body %}
		<!-- Post Content-->
		<article class="mb-4 post-content">
			<div class="container px-4 px-lg-5">
				<div class="row gx-4 gx-lg-5 justify-content-center">
					<div class="col-md-10 col-lg-8 col-xl-7">
						<h1>{{ post.title }}</h1>
						{{ post.content | raw }}
						<p class="post-meta">Publié par
							{# <a href="#">Start Bootstrap</a> #}
							<a href="#">{{ post.user.email }}</a>
							{{post.createdAt | ago}}- Classé dans
							{{ post.category.name }}</p>
					</div>
				</div>
			</div>
		</article>
	{% endblock %}
