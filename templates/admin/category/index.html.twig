{% extends 'sbadmin.html.twig' %}

{% block title %}Liste des catégories
{% endblock %}

{% block body %}
	<main>
		<div class="container-fluid px-4">
			<h1>Liste des catégories</h1>
			<table id="datatablesSimple">
				<thead>
					<tr>
						<th>id</th>
						<th>name</th>
						<th>slug</th>
					</tr>
				</thead>
				<tfoot>

					<tr>
						<th>id</th>
						<th>name</th>
						<th>slug</th>
					</tr>
				</tfoot>
				<tbody>

					{% for category in categories %}
						<tr>
							<th>{{ category.id }}</th>
							<th>{{ category.name }}</th>
							<th>{{ category.slug }}</th>
						</tr>
					{% endfor %}
				</tbody>

			</table>
		</div>
	</main>
{% endblock %}
